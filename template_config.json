{
    "version": "1.0.0",
    "categories": [
        {
            "id": "functional",
            "name": "功能测试",
            "description": "验证系统功能是否符合需求规格说明"
        },
        {
            "id": "interface",
            "name": "接口测试",
            "description": "验证系统接口的正确性和稳定性"
        },
        {
            "id": "performance",
            "name": "性能测试",
            "description": "验证系统在不同负载条件下的性能表现"
        },
        {
            "id": "security",
            "name": "安全测试",
            "description": "验证系统的安全性和防护能力"
        }
    ],
    "templates": [
        {
            "id": "func_basic",
            "name": "基础功能测试模板",
            "category": "functional",
            "version": "1.0",
            "structure": {
                "case_id": "<模块>_<3位序号>",
                "title": "<功能点>_<测试场景>",
                "priority": ["P0", "P1", "P2", "P3"],
                "precondition": "测试前置条件",
                "steps": ["步骤1", "步骤2", "步骤3"],
                "expected_result": "预期结果",
                "actual_result": "实际结果",
                "status": ["通过", "失败", "阻塞", "未执行"]
            }
        },
        {
            "id": "api_basic",
            "name": "基础接口测试模板",
            "category": "interface",
            "version": "1.0",
            "structure": {
                "case_id": "API_<3位序号>",
                "api_name": "接口名称",
                "method": ["GET", "POST", "PUT", "DELETE"],
                "url": "接口URL",
                "headers": {},
                "request_body": {},
                "expected_status": 200,
                "expected_response": {},
                "validation_rules": []
            }
        }
    ]
} 